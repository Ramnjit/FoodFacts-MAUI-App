<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FoodFacts.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FoodFacts.Views"
    xmlns:viewmodels="clr-namespace:FoodFacts.ViewModels"
    x:DataType="viewmodels:AppShellViewModel"
    Shell.FlyoutBehavior="Disabled">
    <Shell.TitleView>
        <Label Text="{Binding Title}"
               TextColor="White"
               FontAttributes="Bold"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
    </Shell.TitleView>

    <TabBar>
        <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate views:SearchPage}"
            Route="SearchPage" />

        <ShellContent
            Title="Favorites"
            ContentTemplate="{DataTemplate views:FavoritesPage}" 
            Route="FavoritesPage" />

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>